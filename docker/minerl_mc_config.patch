+
+# 2. 注释掉 mixin 配置块
+sed -i '/^mixin {/,/^}/s/^/\/\/ DISABLED: /' build.gradle
+
+# 3. 禁用 verifyRepos 强制检查
+sed -i 's/it.dependsOn(verifyRepos)/\/\/ DISABLED: it.dependsOn(verifyRepos)/' build.gradle
+
